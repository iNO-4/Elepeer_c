<div class="container post_ranking_container">
  <div class="post_ranking_title">
    <p class="post_ranking_title_1">Ranking</p>
    <p class="post_ranking_title_2">ランキング</p>
  </div>
  <p class="post_ranking_title_3">いいねの数に応じて変動します</p>

  <div class="post_ranking_box">
    <% @posts.each.with_index(1) do |post, i| %>
    	<%= link_to post_path(post) do %>
    			<p>第<%= i %>位</p>
      			<div class="post_ranking_item">
        			<div class="index_img">
          				<%= attachment_image_tag post, :product_image, :fill, 200, 200, class: "post_index_img_a", fallback: "no_image_square.jpg", size: '200x200' %>
       				</div>
        			<div class="list_box_a">
          				<div class="post_index_name">
            				<%= post.title %>
         				</div>
          				<div class="post_index_day">
          					<%= l post.created_at, format: :short %>
          				</div>
        			</div>
      			</div>
        <% end %>
    <% end %>
  </div>
</div>
